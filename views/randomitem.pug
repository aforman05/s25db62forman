extends layout

block content
  h1= title

  - let image_names = ["africa.jpg", "antarctica.jpg", "columbine.jpg", "hh.jpg", "spanish.avif"];

  // Loop that runs 3 times to display 3 random images
  - for (let i = 0; i < 3; i++)
    - let random_index = Math.floor(Math.random() * 5);
    - let selected_image = image_names[random_index];

    img(src=`\images\${selected_image}`, alt=`Image ${i + 1}`, height="200", width="200")